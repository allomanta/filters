#version 300 es
@builtin_ext@
@builtin@

precision mediump float;

uniform sampler2D in_tex;
out vec4 out_color;
in mediump vec2 uvpos;

void main()
{
    vec4 c = get_pixel(uvpos);
    // Invert
    c.r = 1.0 - c.r;
    c.g = 1.0 - c.g;
    c.b = 1.0 - c.b;
    if (c.a <= 0.5)
    {
        c.r = c.g = c.b = 0.0;
    }
    out_color = c;
}